@using StudioOneHelpers.Services
<MudPaper Width="150px" Elevation="0" Class="py-3">
    <MudNavMenu Color="Color.Info">
        <MudNavLink  OnClick=NavigateToHome Icon="@Icons.Material.Filled.Dashboard">Home</MudNavLink>                
        <MudNavLink OnClick=NavigateToCommands Icon="@Icons.Material.Filled.Keyboard">Cmds</MudNavLink>
        <MudNavLink OnClick=NavigateToPlugins Icon="@Icons.Material.Filled.Extension">Plugins</MudNavLink>
        <MudNavLink OnClick=@(() => NavigationService.NavigateToPresetCategory("All")) Icon="@Icons.Material.Filled.FilePresent">Presets</MudNavLink>
        <MudNavLink OnClick="NavigateToStickers" Icon="@Icons.Material.Filled.StickyNote2">Stickers</MudNavLink>
        <MudNavLink OnClick="NavigateToGuide" Icon="@Icons.Material.Filled.Whatshot">Guide</MudNavLink>
    </MudNavMenu>
</MudPaper>

