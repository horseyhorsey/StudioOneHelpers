@using MudBlazor

<MudDialog>
    <DialogContent>
        <MudContainer MaxWidth="MaxWidth.Medium" Class="pa-4">
            <MudStack Spacing="4">
                <!-- Header -->
                <MudStack Row AlignItems="AlignItems.Center" Spacing="2">
                    <MudIcon Icon="@Icons.Material.Filled.Help" Color="Color.Primary" Size="Size.Large" />
                    <MudText Typo="Typo.h5" Style="font-weight: bold;">Commands & Macros Help</MudText>
                </MudStack>

                <!-- Main content -->
                <MudText Typo="Typo.body1" Class="mb-3">
                    This view displays all your Studio One commands and macros from your exported HTML file. Here's what you can do:
                </MudText>

                <!-- Features list -->
                <MudStack Spacing="3">
                    <MudStack Row Spacing="2" AlignItems="AlignItems.Start">
                        <MudIcon Icon="@Icons.Material.Filled.Search" Color="Color.Primary" Size="Size.Small" Class="mt-1" />
                        <MudStack Spacing="1">
                            <MudText Typo="Typo.subtitle2" Style="font-weight: bold;">Search Commands</MudText>
                            <MudText Typo="Typo.body2">
                                Use the search box to find commands by section name, command name, or keyboard shortcut. 
                                The search will match any part of these fields.
                            </MudText>
                        </MudStack>
                    </MudStack>

                    <MudStack Row Spacing="2" AlignItems="AlignItems.Start">
                        <MudIcon Icon="@Icons.Material.Filled.Keyboard" Color="Color.Success" Size="Size.Small" Class="mt-1" />
                        <MudStack Spacing="1">
                            <MudText Typo="Typo.subtitle2" Style="font-weight: bold;">Assigned Keys Filter</MudText>
                            <MudText Typo="Typo.body2">
                                Toggle the "Assigned" checkbox to show only commands that have keyboard shortcuts assigned, 
                                or all commands including those without shortcuts.
                            </MudText>
                        </MudStack>
                    </MudStack>

                    <MudStack Row Spacing="2" AlignItems="AlignItems.Start">
                        <MudIcon Icon="@Icons.Material.Filled.PictureAsPdf" Color="Color.Error" Size="Size.Small" Class="mt-1" />
                        <MudStack Spacing="1">
                            <MudText Typo="Typo.subtitle2" Style="font-weight: bold;">Export to PDF</MudText>
                            <MudText Typo="Typo.body2">
                                Generate a PDF report of all commands and macros. The export respects your current search and filter settings.
                            </MudText>
                        </MudStack>
                    </MudStack>

                    <MudStack Row Spacing="2" AlignItems="AlignItems.Start">
                        <MudIcon Icon="@Icons.Material.Filled.Folder" Color="Color.Primary" Size="Size.Small" Class="mt-1" />
                        <MudStack Spacing="1">
                            <MudText Typo="Typo.subtitle2" Style="font-weight: bold;">Group & Organize</MudText>
                            <MudText Typo="Typo.body2">
                                Commands are grouped by section name. Use the expand/collapse buttons to manage the view and see command counts.
                            </MudText>
                        </MudStack>
                    </MudStack>

                    <MudStack Row Spacing="2" AlignItems="AlignItems.Start">
                        <MudIcon Icon="@Icons.Material.Filled.Storage" Color="Color.Info" Size="Size.Small" Class="mt-1" />
                        <MudStack Spacing="1">
                            <MudText Typo="Typo.subtitle2" Style="font-weight: bold;">Local Storage</MudText>
                            <MudText Typo="Typo.body2">
                                Your commands are stored locally in your browser. They persist between sessions and don't require re-importing.
                            </MudText>
                        </MudStack>
                    </MudStack>
                </MudStack>

                <!-- Additional info -->
                <MudAlert Severity="Severity.Info" Class="mt-4">
                    <MudText Typo="Typo.body2">
                        <strong>Tip:</strong> To load your commands, first export them from Studio One as HTML, 
                        then use the import function on the main page to process the file.
                    </MudText>
                </MudAlert>
            </MudStack>
        </MudContainer>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">OK</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] IMudDialogInstance MudDialog { get; set; } = null!;

    void Cancel() => MudDialog.Cancel();
}
