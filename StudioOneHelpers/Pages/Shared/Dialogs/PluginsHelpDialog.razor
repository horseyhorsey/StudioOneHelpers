@using MudBlazor

<MudDialog>
    <DialogContent>
        <MudContainer MaxWidth="MaxWidth.Medium" Class="pa-4">
            <MudStack Spacing="4">
                <!-- Header -->
                <MudStack Row AlignItems="AlignItems.Center" Spacing="2">
                    <MudIcon Icon="@Icons.Material.Filled.Help" Color="Color.Primary" Size="Size.Large" />
                    <MudText Typo="Typo.h5" Style="font-weight: bold;">Studio One Plugins Help</MudText>
                </MudStack>

                <!-- Main content -->
                <MudText Typo="Typo.body1" Class="mb-3">
                    This view displays all your Studio One plugins from the Plugins-en.settings file. Here's what you can do:
                </MudText>

                <!-- Features list -->
                <MudStack Spacing="3">
                    <MudStack Row Spacing="2" AlignItems="AlignItems.Start">
                        <MudIcon Icon="@Icons.Material.Filled.Search" Color="Color.Primary" Size="Size.Small" Class="mt-1" />
                        <MudStack Spacing="1">
                            <MudText Typo="Typo.subtitle2" Style="font-weight: bold;">Search & Filter</MudText>
                            <MudText Typo="Typo.body2">
                                Use the search box to find plugins by name, vendor, or folder. 
                                Click the search icons next to any value to filter by that specific item.
                            </MudText>
                        </MudStack>
                    </MudStack>

                    <MudStack Row Spacing="2" AlignItems="AlignItems.Start">
                        <MudIcon Icon="@Icons.Material.Filled.Extension" Color="Color.Success" Size="Size.Small" Class="mt-1" />
                        <MudStack Spacing="1">
                            <MudText Typo="Typo.subtitle2" Style="font-weight: bold;">VST3 Filter</MudText>
                            <MudText Typo="Typo.body2">
                                Toggle the VST3 checkbox to show only VST3 plugins or all plugin types. 
                                This helps you focus on specific plugin formats.
                            </MudText>
                        </MudStack>
                    </MudStack>

                    <MudStack Row Spacing="2" AlignItems="AlignItems.Start">
                        <MudIcon Icon="@Icons.Material.Filled.PictureAsPdf" Color="Color.Error" Size="Size.Small" Class="mt-1" />
                        <MudStack Spacing="1">
                            <MudText Typo="Typo.subtitle2" Style="font-weight: bold;">Export to PDF</MudText>
                            <MudText Typo="Typo.body2">
                                Generate a PDF report of all plugins. The export respects your current search and filter settings.
                            </MudText>
                        </MudStack>
                    </MudStack>

                    <MudStack Row Spacing="2" AlignItems="AlignItems.Start">
                        <MudIcon Icon="@Icons.Material.Filled.Add" Color="Color.Success" Size="Size.Small" Class="mt-1" />
                        <MudStack Spacing="1">
                            <MudText Typo="Typo.subtitle2" Style="font-weight: bold;">Create Macros</MudText>
                            <MudText Typo="Typo.body2">
                                Click the green plus icon to create Studio One macros for any plugin. This generates a macro file you can import into Studio One.
                            </MudText>
                        </MudStack>
                    </MudStack>

                    <MudStack Row Spacing="2" AlignItems="AlignItems.Start">
                        <MudIcon Icon="@Icons.Material.Filled.Folder" Color="Color.Primary" Size="Size.Small" Class="mt-1" />
                        <MudStack Spacing="1">
                            <MudText Typo="Typo.subtitle2" Style="font-weight: bold;">Group & Organize</MudText>
                            <MudText Typo="Typo.body2">
                                Plugins are grouped by category (AudioSynth, AudioEffect). Use the expand/collapse buttons to manage the view.
                            </MudText>
                        </MudStack>
                    </MudStack>
                </MudStack>

                <!-- Additional info -->
                <MudAlert Severity="Severity.Info" Class="mt-4">
                    <MudText Typo="Typo.body2">
                        <strong>Tip:</strong> This data comes from your Studio One Plugins-en.settings file. 
                        Make sure you've imported this file from your Studio One installation directory.
                    </MudText>
                </MudAlert>
            </MudStack>
        </MudContainer>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">OK</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] IMudDialogInstance MudDialog { get; set; } = null!;

    void Cancel() => MudDialog.Cancel();
}
