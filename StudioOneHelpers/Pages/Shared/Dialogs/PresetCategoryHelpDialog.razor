@using MudBlazor

<MudDialog>
    <DialogContent>
        <MudContainer MaxWidth="MaxWidth.Medium" Class="pa-4">
            <MudStack Spacing="4">
                <!-- Header -->
                <MudStack Row AlignItems="AlignItems.Center" Spacing="2">
                    <MudIcon Icon="@Icons.Material.Filled.Help" Color="Color.Primary" Size="Size.Large" />
                    <MudText Typo="Typo.h5" Style="font-weight: bold;">@CategoryName Presets Help</MudText>
                </MudStack>

                <!-- Main content -->
                <MudText Typo="Typo.body1" Class="mb-3">
                    This view displays all @CategoryName presets from your Studio One database. Here's what you can do:
                </MudText>

                <!-- Features list -->
                <MudStack Spacing="3">
                    <MudStack Row Spacing="2" AlignItems="AlignItems.Start">
                        <MudIcon Icon="@Icons.Material.Filled.Search" Color="Color.Primary" Size="Size.Small" Class="mt-1" />
                        <MudStack Spacing="1">
                            <MudText Typo="Typo.subtitle2" Style="font-weight: bold;">Search & Filter</MudText>
                            <MudText Typo="Typo.body2">
                                Use the search box to find presets by name, vendor, creator, or any other field. 
                                Click the search icons next to any value to filter by that specific item.
                            </MudText>
                        </MudStack>
                    </MudStack>

                    <MudStack Row Spacing="2" AlignItems="AlignItems.Start">
                        <MudIcon Icon="@Icons.Material.Filled.PictureAsPdf" Color="Color.Error" Size="Size.Small" Class="mt-1" />
                        <MudStack Spacing="1">
                            <MudText Typo="Typo.subtitle2" Style="font-weight: bold;">Export to PDF</MudText>
                            <MudText Typo="Typo.body2">
                                Generate a PDF report of all presets in this category. The export respects your current search and filter settings.
                            </MudText>
                        </MudStack>
                    </MudStack>

                    @if (CategoryName != "MusicEffect" && CategoryName != "PatternBank")
                    {
                        <MudStack Row Spacing="2" AlignItems="AlignItems.Start">
                            <MudIcon Icon="@Icons.Material.Filled.Add" Color="Color.Success" Size="Size.Small" Class="mt-1" />
                            <MudStack Spacing="1">
                                <MudText Typo="Typo.subtitle2" Style="font-weight: bold;">Create Macros</MudText>
                                <MudText Typo="Typo.body2">
                                    Click the green plus icon to create Studio One macros for any preset. This generates a macro file you can import into Studio One.
                                </MudText>
                            </MudStack>
                        </MudStack>
                    }

                    <MudStack Row Spacing="2" AlignItems="AlignItems.Start">
                        <MudIcon Icon="@Icons.Material.Filled.Sort" Color="Color.Primary" Size="Size.Small" Class="mt-1" />
                        <MudStack Spacing="1">
                            <MudText Typo="Typo.subtitle2" Style="font-weight: bold;">Sort & Navigate</MudText>
                            <MudText Typo="Typo.body2">
                                Click column headers to sort by that field. Use the pagination controls at the bottom to navigate through large result sets.
                            </MudText>
                        </MudStack>
                    </MudStack>
                </MudStack>

                <!-- Additional info -->
                <MudAlert Severity="Severity.Info" Class="mt-4">
                    <MudText Typo="Typo.body2">
                        <strong>Tip:</strong> The data is loaded from your Studio One database. If you don't see any presets, 
                        make sure you've imported your Studio One database first using the main page.
                    </MudText>
                </MudAlert>
            </MudStack>
        </MudContainer>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">OK</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] IMudDialogInstance MudDialog { get; set; } = null!;
    [Parameter] public string CategoryName { get; set; } = "";

    void Cancel() => MudDialog.Cancel();
}
